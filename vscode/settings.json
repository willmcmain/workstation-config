{
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.fontSize": 13,
    "editor.rulers": [
        80
    ],

    "explorer.autoReveal": false,
    "extensions.ignoreRecommendations": false,

    "files.associations": {
        "*.sls": "yaml",
        "*.template": "mako"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/*.pyo": true
    },

    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.blame.compact": false,
    "gitlens.blame.highlight.enabled": false,
    "gitlens.blame.avatars": false,
    "gitlens.blame.format": "(${id}) ${author|15} ${date|-}",
    "gitlens.blame.dateFormat": "YYYY-MM-DD",
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.scopes": [],
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.keymap": "alternate",

    "python.pythonPath": "/usr/local/bin/python2.7",
    "python.linting.pep8Enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.pep8Args": [
        "--ignore=E501, E121, E122, E123, E124, E125, E126, E127, E128"
    ],
    "python.linting.pep8CategorySeverity.E": "Warning",

    "todohighlight.include": [
        "**/*.js",
        "**/*.jsx",
        "**/*.html",
        "**/*.css",
        "**/*.py"
    ],
    "todohighlight.toggleURI": true,

    "vim.cmdLineInitialColon": true,
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.foldfix": true,
    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,

    "workbench.colorCustomizations": {
        "editorWarning.foreground": "#dddd00"
    
    },
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.startupEditor": "newUntitledFile",
    "editor.renderWhitespace": "all",
    "python.linting.mypyEnabled": true,
    "python.linting.mypyCategorySeverity.error": "Information"
}
